pipeline {
    agent any

    environment {
        VIRTUAL_ENV = "venv"
    }

    stages {
        stage("Git Clone") {
            steps {
                git(
                    credentialsId: 'c7c078f8-e44a-4217-a0ba-0e48a22bfd02',
                    branch: 'main',
                    url: 'https://github.com/NirikshaShivalkar/DevOps-ToDo.git'
                )
                bat "dir /s"  // Debugging: List files after cloning
            }
        }

        stage('Set Up Python Environment') {
            steps {
                bat '''
                    echo "ğŸ”¹ Checking if Python is installed..."
                    python --version || exit /b 1

                    echo "ğŸ”¹ Creating virtual environment..."
                    python -m venv venv

                    echo "ğŸ”¹ Activating virtual environment..."
                    call venv\\Scripts\\activate

                    echo "ğŸ”¹ Checking if requirements.txt exists..."
                    if not exist requirements.txt (
                        echo "âŒ ERROR: requirements.txt not found!"
                        exit /b 1
                    )

                    echo "ğŸ”¹ Installing dependencies..."
                    python -m pip install --upgrade pip
                    python -m pip install -r requirements.txt

                    if errorlevel 1 (
                        echo "âŒ ERROR: Dependency installation failed!"
                        exit /b 1
                    )
                '''
            }
        }

        stage('Run Tests') {
            steps {
                bat '''
                    echo "ğŸ”¹ Running Tests..."
                    call venv\\Scripts\\activate
                    pytest --junitxml=report.xml

                    if errorlevel 1 (
                        echo "âŒ Tests Failed!"
                        exit /b 1
                    )
                '''
            }
        }

        stage('Docker Build & Deploy') {
            steps {
                bat '''
                    echo "ğŸ³ Stopping existing containers (if any)..."
                    docker-compose down || echo "No containers running."

                    echo "ğŸ³ Building and starting containers..."
                    docker-compose up --build -d

                    if errorlevel 1 (
                        echo "âŒ Docker Compose failed!"
                        exit /b 1
                    )
                '''
            }
        }
    }

    post {
        always {
            junit 'report.xml'
        }
        failure {
            echo 'âŒ Pipeline failed!'
        }
        success {
            echo 'âœ… Pipeline completed successfully! App deployed via Docker.'
        }
    }
}
